pipeline {
    agent any
  //  tools { 
    //  maven 'MAVEN_HOME' 
     // jdk 'JAVA_HOME' 
    }
    
    stages {
        stage('checkout') {
            steps {
                git "https://github.com/Bala1960/SpringSelenium.git"
                echo "checkout of the Git repository"
            }
        }
        stage('Build') {
            steps {
                    bat "mvn install"
                    echo "compile the batch file"
                
            }
        }
        stage('Test') {
            steps {
                    bat "mvn test"
                    echo "test the batch"
                
            }
        }
        stage('Deploy') {
            steps {
                    bat "mvn package"
                    echo "Deploy the batch"
                
            }
        }
    }
}
